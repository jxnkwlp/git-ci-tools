<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net5.0</TargetFramework>
		<RootNamespace>Git_CI_Tools</RootNamespace>
		<Authors>Passingwind</Authors>
		<PackAsTool>true</PackAsTool>
		<ToolCommandName>gitci</ToolCommandName>
		<PackageId>Passingwind.Git-CI-Tools</PackageId>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/jxnkwlp/git-ci-tools</RepositoryUrl>
		<RepositoryType>github</RepositoryType>
		<PackageProjectUrl>https://github.com/jxnkwlp/git-ci-tools</PackageProjectUrl>
		<PackageTags>ci, git</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20071.2" />
		<PackageReference Include="LibGit2Sharp" Version="0.26.2" />
		<PackageReference Include="YamlDotNet" Version="10.1.0" />
		<PackageReference Include="semver" Version="2.0.6" />
	</ItemGroup>

</Project>
